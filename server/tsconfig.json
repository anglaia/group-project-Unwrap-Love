{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "es2017"
        ],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}